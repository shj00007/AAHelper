<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_alignParentBottom="true" >

    <RelativeLayout
        android:id="@+id/layBottomBar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/bg_title_bit" >

        <ImageView
            android:id="@+id/ivBottomIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_big" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ivBottomIcon"
            android:paddingLeft="4dp"
            android:text="@string/WelcomeInfo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="4dp"
            android:src="@drawable/main_btn" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layBottomListViewBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layBottomBar" >

        <ListView
            android:id="@+id/lvSlideList"
            style="@style/StyleListView" >
        </ListView>
    </LinearLayout>

</RelativeLayout>